.banner {
    width: 100%;
    .layui-carousel {
        position: relative;
        img {
            width: 100%;
            height: 100%;
        }
        .img-index-mask{
            width: 0.8rem;
            height: 0.8rem;
            border-radius: 50%;
            background-color: #000;
            opacity: 0.6;
            position: absolute;
            right: 0.2rem;
            bottom: 0.2rem;
        }
        .img-index{
            width: 0.8rem;
            height: 0.8rem;
            border-radius: 50%;
            color: #fff;
            text-align: center;
            line-height: 0.82rem;
            font-size: 0.32rem;
            position: absolute;
            right: 0.2rem;
            bottom: 0.2rem;
        }
    }
    .infor{
        background-color: #fff;
        padding: 0.3rem 0.2rem;
        margin-bottom: 0.2rem;
        h3{
            font-size: 0.32rem;
            font-weight: bold;
            color: #000;
            margin-bottom: 0.2rem;
        }
        div{
            display: flex;
            justify-content: space-between;
            align-items: center;
            .price{
                font-size: 0.3rem;
                font-weight: bold;
                color: red;
            }
            .time{
                font-size: 0.24rem;
                color: #999;
            }
        }
    }
}

.describe{
    background-color: #fff;
    h3{
        padding: 0.3rem 0.2rem;
        border-bottom: 1px solid #EBEBEB;
        span {
            font-size: 0.3rem;
            color: #333;
            font-weight: bold;
            display: inline-block;
            padding-left: 0.2rem;
            border-left: 0.1rem solid #2b76ff;
        }
    }
    .branch {
        height: 1rem;
        background-color: #fff;
        padding: 0.2rem;
        border-bottom: 1px solid #EBEBEB;
        display: flex;
        align-items: center;
        justify-content: space-between;
        .shop-name {
            display: flex;
            align-items: center;
            img {
                width: 0.3rem;
                height: 0.3rem;
                margin-right: 0.2rem;
            }
            p {
                font-size: 0.3rem;
                font-weight: bold;
                justify-content: flex-start;
            }
        }
        span {
            i {
                font-size: 0.35rem;
            }
        }
    }
    .des-content{
        height: 4.9rem;
        padding: 0.3rem 0.2rem;
        font-size: 0.28rem;
        color: #666;
        line-height: 0.55rem;
        overflow: hidden;
        p{
            text-indent: 0.25rem;
            text-align: justify;
        }
    }
}

.more{
    width: 100%;
    height: 1rem;
    border-top: 1px solid #EBEBEB;
    line-height: 1rem;
    font-size: 0.26rem;
    color: #2b76ff;
    background-color: #fff;
    position: fixed;
    left: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    span:nth-child(1){
        display: inline-block;
        margin-right: 0.3rem;
    }
    i{
        font-size: 0.35rem;
    }
}
