html {
    background-color: #fff;
}

.top {
    width: 100%;
    height: 4.46rem;
    padding-top: 0.7rem;
    background: url(../img/CLMJ_square.png) no-repeat;
    background-size: 100% 100%;
    .content {
        width: 5.75rem;
        margin: 0 auto;
        padding: 0.35rem 0.25rem;
        position: relative;
        h3 {
            color: #2b76ff;
            font-size: 0.32rem;
            font-weight: bold;
            text-align: center;
        }
        .p1 {
            font-size: 0.26rem;
            text-align: center;
            color: #333;
            margin: 0.2rem 0 0.25rem 0;
        }
        .p2 {
            font-size: 0.26rem;
            color: #0058ac;
            text-align: justify;
        }
        img {
            width: 1.26rem;
            height: 1.26rem;
            position: absolute;
            left: -0.3rem;
            top: -0.3rem;
        }
    }
}

.progress {
    padding: 0.55rem;
    ul {
        display: flex;
        justify-content: space-between;
        li {
            color: #2b76ff;
            font-size: 0.24rem;
            text-align: center;
            img {
                width: 1rem;
                height: 1rem;
                margin: 0 auto 0.4rem;
            }
        }
        i {
            font-size: 0.3rem;
            align-self: center;
            color: #2b76ff;
        }
    }
}

.bottom {
    border-top: 1px solid #EBEBEB;
    padding: 0.2rem 0.3rem;
    h3 {
        font-size: 0.3rem;
        color: #333;
        text-align: center;
        line-height: 0.8rem;
        position: relative;
    }
    .tips {
        font-size: 0.28rem;
        color: #666;
        line-height: 0.55rem;
    }
    ul {
        padding-left: 0.4rem;
        li {
            font-size: 0.28rem;
            color: #666;
            line-height: 0.55rem;
        }
    }
}